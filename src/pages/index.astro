---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialLinks from '../components/SocialLinks.astro';
---

<BaseLayout
  title="Nich Arena - Technical AI Strategist"
  description="Personal website of Nich Arena. Technical AI Strategist at Tenex, former NASA JPL engineer."
>
  <article class="max-w-2xl mx-auto">
    <!-- Bio -->
    <section class="mb-12">
      <h1 class="text-3xl font-bold mb-4 text-[var(--color-accent)]">
        Hello, I'm Nich Arena
      </h1>
      <p class="text-lg text-[var(--color-text-muted)] leading-relaxed">
        Technical AI Strategist at Tenex (employee #6). Previously built software for Mars rovers
        and space missions at NASA JPL. I write about things I learn along the way.
      </p>
    </section>

    <!-- Experience -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4 text-[var(--color-accent)]">
        Experience
      </h2>
      <div class="space-y-4">
        <div>
          <div class="flex justify-between items-baseline">
            <h3 class="font-medium">Technical AI Strategist</h3>
            <span class="text-sm text-[var(--color-text-muted)]">2025 - Present</span>
          </div>
          <p class="text-[var(--color-text-muted)]">Tenex</p>
        </div>
        <div>
          <div class="flex justify-between items-baseline">
            <h3 class="font-medium">Software Engineer</h3>
            <span class="text-sm text-[var(--color-text-muted)]">2024 - 2025</span>
          </div>
          <p class="text-[var(--color-text-muted)]">Relativity Space</p>
        </div>
        <div>
          <div class="flex justify-between items-baseline">
            <h3 class="font-medium">Scientific Applications Software Engineer</h3>
            <span class="text-sm text-[var(--color-text-muted)]">2020 - 2024</span>
          </div>
          <p class="text-[var(--color-text-muted)]">NASA Jet Propulsion Laboratory</p>
        </div>
        <div>
          <div class="flex justify-between items-baseline">
            <h3 class="font-medium">Scientific Visualization Intern</h3>
            <span class="text-sm text-[var(--color-text-muted)]">2019</span>
          </div>
          <p class="text-[var(--color-text-muted)]">NASA Jet Propulsion Laboratory</p>
        </div>
      </div>
    </section>

    <!-- Education -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4 text-[var(--color-accent)]">
        Education
      </h2>
      <div class="space-y-4">
        <div>
          <h3 class="font-medium">M.S. Applied and Computational Mathematics</h3>
          <p class="text-[var(--color-text-muted)]">Johns Hopkins University</p>
        </div>
        <div>
          <h3 class="font-medium">B.S. Computational and Applied Mathematics</h3>
          <p class="text-[var(--color-text-muted)]">University of Chicago</p>
        </div>
        <div>
          <h3 class="font-medium">B.S. Computer Science with a Specialization in Theory</h3>
          <p class="text-[var(--color-text-muted)]">University of Chicago</p>
        </div>
      </div>
    </section>

    <!-- Connect -->
    <section>
      <h2 class="text-xl font-semibold mb-4 text-[var(--color-accent)]">
        Connect
      </h2>
      <SocialLinks />
    </section>
  </article>
</BaseLayout>
